{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "operator",
    "type": "object",
    "description": "Operator definition.",
    "allOf": [ { "$ref": "glTFChildOfRootProperty.schema.json" } ],
    "properties": {
        "function": {
            "default": "VALUE",
            "description": "ToDo: Add more operators.",
            "anyOf": [
                {
                    "const": "VALUE"
                },
                {
                    "const": "IDENTIY"
                },
                {
                    "const": "NOT"
                },
                {
                    "const": "AND"
                },
                {
                    "const": "OR"
                },
                {
                    "type": "string"
                }
            ]
        },
        "type": {
            "default": "number",
            "description": "Allowed types. Has to be identical with properties insidw values.",
            "anyOf": [
                {
                    "const": "number"
                },
                {
                    "const": "integer"
                },
                {
                    "const": "boolean"
                },
                {
                    "type": "string"
                }
            ]
        },
        "values": {
            "type": "array",
            "description": "The values of this operator.",
            "items": {
                "oneOf": [
                    {
                        "type": "number"
                    },
                    {
                        "type": "integer"
                    },
                    {
                        "type": "boolean"
                    }
                ]
            },
            "minItems": 1
        },
        "inputOperators": {
            "type": "array",
            "description": "The indices of this operator's input operators. If not present, this operator is a jsut container for values.",
            "items": {
                "$ref": "glTFid.schema.json"
            },
            "minItems": 1
        },
        "name": { },
        "extensions": { },
        "extras": { }
    },
    "required": [
        "function",
        "type",
        "values"
    ]
}

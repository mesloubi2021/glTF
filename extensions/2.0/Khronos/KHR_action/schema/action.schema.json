{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "action",
    "type": "object",
    "description": "Action definition.",
    "allOf": [ { "$ref": "glTFChildOfRootProperty.schema.json" } ],
    "properties": {
        "type": {
            "description": "Allowed types.",
            "anyOf": [
                {
                    "const": "ToPointer"
                },
                {
                    "type": "string"
                }
            ]
        },
        "logic": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the logic triggering this action."
        },
        "outputPointer": {
            "type": "string",
            "description": "JSON pointer of the value to change."
        },
        "inputPointer": {
            "type": "string",
            "description": "JSON pointer of the value to retrieve the value for the outputPointer. If not defined, the value is the result of the logic."
        },
        "name": { },
        "extensions": { },
        "extras": { }
    },
    "required": [
        "type",
        "logic",
        "outputPointer"
    ]
}

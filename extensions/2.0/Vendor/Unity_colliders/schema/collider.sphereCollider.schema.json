{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "Unity_colliders Sphere Collider",
    "type": "object",
    "description": "A set of parameter values that are used to define a sphere collider.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "center": {
            "type": "array",
            "description": "The center of the collider.",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [ 0.0, 0.0, 0.0 ]
        },
        "radius": {
            "type": "number",
            "default": 0.5,
            "description": "The radius of the collider."
        },
        "extensions": { },
        "extras": { }
    }
}